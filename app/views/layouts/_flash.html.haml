- flash.each do |name, msg|
  = content_tag :div, :class => "alert alert-#{%w[alert error].include?(name.to_s) ? "danger" : "success" } alert-dismissable", :role => "alert" do
    %button.close{:type => "button", :data => {:dismiss => "alert"} }
      %span{:aria => {:hidden => "true"} } &times;
      %span.sr-only Close
    = msg
